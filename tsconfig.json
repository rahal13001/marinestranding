{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "react-jsx",
      "lib": ["ESNext", "DOM"],
      "types": ["vite/client"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/js/*"]
      }
    },
    "include": ["resources/**/*.ts", "resources/**/*.tsx"]
  }